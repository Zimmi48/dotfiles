# This is Git's per-user configuration file.
[user]
	name = Th√©o Zimmermann
	email = theo.zimmermann@univ-paris-diderot.fr
[push]
	default = current
[remote]
	pushdefault = origin
[credential]
	helper = cache --timeout=3600
[alias]
	fix = commit -a --amend --no-edit
        pull-request = "!f() { dir=\"`git rev-parse --show-toplevel`-pr-$1\"; remote=${2:-$(git remote | grep ^upstream || echo origin)}; branch=\"pr/$1\"; ref=\"refs/pull/$1/head\"; git fetch ${remote} ${ref} && git branch ${branch} FETCH_HEAD && git config branch.${branch}.remote ${remote} && git config branch.${branch}.merge ${ref} && git worktree add ${dir} ${branch} && cd ${dir} && bash; }; f"
